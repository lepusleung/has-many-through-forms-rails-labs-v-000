<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %>
  <%= f.text_area :content %><br><br>

  <%= f.label :Existing_category_ids %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>

  <%= f.label "New Category" %>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %><br>
    <%= categories_fields.text_field :name %><br><br>
  <% end %>
  <%= f.submit %>
<% end %>
